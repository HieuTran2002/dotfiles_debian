{
    "layer": "top",
    "position": "top",
    "height": 24,
    "spacing": 4,
    "modules-left": [
        "sway/workspaces",
        "sway/taskbar",
        "tray"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "memory",
        "cpu",
        "pulseaudio",
        "battery#BAT2",
        "clock",
    ],
    "wlr/taskbar": {
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "foot"
        ]
    },
    "wlr/workspaces": {
      "on-click": "activate",
      "on-scroll-up": "hyprctl dispatch workspace e-1",
      "on-scroll-down": "hyprctl dispatch workspace e+1"
    },
    "sway/window": {
        "format": "{}",
        "max-length": 50,
        "rewrite": {
            "(.*) - Mozilla Firefox": "ğŸŒ $1",
            "(.*) - zsh": "> [$1]"
        }
    },
    "cpu": {
        "interval": 10,
        "format": "{}% ï‹›",
        "max-length": 10
    },
    "pulseaudio": {
		"format": "ï€¨  {volume}% ",
        "format-muted": "î Muted "
    },

    "battery": {
        "bat": "BAT1",
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
        "max-length": 25
    },
    "memory": {
      "interval": 30,
      "format": "{used:0.1f}G/{total:0.1f}G ïƒ‰"
    },
    "clock": {
      "format": "ï€— {:%H:%M, %Y-%m-%d }",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "tray": {
      "spacing": 4
    },
    "custom/weather": {
      "exec": "~/.config/waybar/wittr.sh",
      "return-type": "json",
      "format": "{}",
      "tooltip": true,
      "interval": 900
    },
    "hyprland/language": {
      "format-pl": "[pl]",
      "format-en": "[us]",
      "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    }
}
